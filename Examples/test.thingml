    stream mergeMessagesWithValues do
        from mm: [ e1 : [rcvPort?m5]::filter(mergeM5(e1)) | rcvPort?m6 -> cep4(#0, complexTransforming(#1), (#2 * 2) + 5)]::lengthWindow(2)
        select a : avg_a(mm.a[]), b: avg_a(mm.b[]), c: avg_a(mm.c[])
        action sendPort!cep4(a,b,c)
    end
    
    stream joinMessages do
        from mm : [ e1 : rcvPort?m7 & e2 : rcvPort?m8 -> cep5(e1.a * e2.v1, e1.b * e2.v2, e1.c * e2.v3)]::filter(mergeCep4(mm))::lengthWindow(2)
        select a : avg_a(mm.a[]), b: avg_a(mm.b[]), c: avg_a(mm.c[])
        action sendPort!cep5(a,b,c)
    end
    
    function avg_a(values : Integer[]) : Integer do
        var i :Integer = 0
        var avg : Integer = 0
        while (i < 2) do
            avg = avg + values[i]
            i = i + 1
        end
        return avg / 2
    end
    
    stream testAvg do
        from t : [rcvPort?m2]::lengthWindow(2)
        select a : avg_a(t.v1[]), b : avg_a(t.v2[])
        action sendPort!cep2(a,b)
    end
    
    
    statechart Sample init Init {
        state Init {
