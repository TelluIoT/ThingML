<?eclipse version="3.4"?>
<plugin>





       <extension
       point="org.eclipse.ui.preferencePages">
    <page
          class="org.thingml.eclipse.preferences.ThingMLPreferencePage"
          id="org.thingml.eclipse.preferences.ThingMLPreferencePage"
          name="ThingML">
    </page>
 </extension>
 <extension
       point="org.eclipse.core.runtime.preferences">
    <initializer
          class="org.thingml.eclipse.preferences.PreferenceInitializer">
    </initializer>
 </extension>




   
   
   
   
   <extension point="org.eclipse.ui.commands">
  <command
        description="Make the ThingML Console visible."
        id="thingml.showconsole"
        name="Show Console...">
  </command>
  <command
        description="Compile ThingML Program"
        id="thingml.compile"
        name="Compile">
     <commandParameter
           id="org.thingml.eclipse.ui.commandParameterCompilerName"
           name="compiler_name"
           optional="true">
     </commandParameter>
  </command>
</extension>

<extension point="org.eclipse.ui.handlers">
  <handler
        class="org.thingml.eclipse.ui.commands.ShowThingMLConsole"
        commandId="thingml.showconsole">
  </handler>
  <handler
        class="org.thingml.eclipse.ui.commands.CompileThingFile"
        commandId="thingml.compile">
  </handler>
</extension>
   
   
   <extension point="org.eclipse.ui.menus">
  <menuContribution locationURI="popup:org.eclipse.ui.popup.any?after=additions">
     <menu
           icon="icons/heads.png"
           label="HEADS / ThingML">
        <visibleWhen>
           <with
                 variable="activeMenuSelection">
              <iterate>
                 <adapt
                       type="org.eclipse.core.resources.IFile">
                    <test
                          property="org.eclipse.core.resources.name"
                          value="*.thingml">
                    </test>
                 </adapt>
              </iterate>
           </with>
        </visibleWhen>
        <command
              commandId="thingml.showconsole"
              style="push">
        </command>
        <dynamic
              class="org.thingml.eclipse.ui.commands.DynamicCompilerMenu"
              id="org.thingml.eclipse.ui.dynamiccompilermenu">
        </dynamic>
     </menu>
  </menuContribution>
</extension>
   
   

   

</plugin>
