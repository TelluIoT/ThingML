thing fragment Foo
{
    abstract function foo()

    function bar() do
        foo()
    end
}

thing TestCheckAbstractFunction includes Foo
{
    //Should fail because function foo is not implemented
    statechart TestAbstractFunction init INIT {
    	state INIT {
    		on entry do
    			foo()
    			bar()
    		end
    	}
    }
}