import "../../thingml.thingml"

thing TestSession4 includes Test
@test "A # (AT|TA)"
{
	property finished : Integer = 0
	internal port forks { receives Done sends Done }
	
	message m(u : UInt8)

	internal port p	{
		sends m
		receives m
	}

	property ID : Char = 'M'

	statechart Chart init INIT {

    	state INIT {
			internal
			event e : Test?In
			action do
				ID = e.c
				fork s
				ID = 'M'
			end
			
			internal event forks?Done
			action do
				finished++
				if (finished == 2) TestDone()
			end
    	}

		session s<2> init S1 {
			state S1 {
				on entry do
					TestOut(ID)
					forks!Done()
					ID = 'T'
					fork t
				end
			}


		}

		session t<2> init T1 {
				final state T1 {
					on entry do
						TestOut(ID)
						forks!Done()
					end
				}
			}
    }
}
