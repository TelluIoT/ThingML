import "../../thingml.thingml"

thing TestHistory includes Test 
@test "t # IC0(1X)?"
@test "tntt # IC0123XIC2(3X)?"

{
	statechart TestHistory init I {
		internal event Test?Done
		action TestDone()
	
		state I {
			on entry TestOut('I')
			transition -> C
			event m : Test?In
			guard m.c == 't'
		}
		
		composite state C init C1 keeps history {
		
		on entry TestOut('C')
		on exit TestOut('X')
		transition -> I
		event m : Test?In
		guard m.c == 't'
		
			state C1 {
				on entry TestOut('0')
				on exit TestOut('1')
				transition -> C2
				event m : Test?In
				guard m.c == 'n'
			}
			
			state C2 {
				on entry TestOut('2')
				on exit TestOut('3')
				transition -> C1
				event m : Test?In
				guard m.c == 'n'
			}
		}
	}
}
