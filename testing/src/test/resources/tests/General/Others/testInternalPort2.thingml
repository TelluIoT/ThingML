import "../../thingml.thingml"

thing TestInternalPort2 includes Test, Msg 
@test "t # EXX"
{
	property received : Integer = 0
    
    provided port p {
        sends m
        receives m
    }
    
	statechart TestInternalPort init I {
	
		state I {
			on entry TestOut('E')

            internal event m : Test?In
			guard m.c == 't' 
            action p!m()
			
			internal event n : p?m
			action do
				TestOut('X')
				received++
			end
			
			transition -> S guard (received == 2)
		}
		
		state S {
			on entry TestDone()
		}
	}
}

thing fragment Msg {
	message m();
}

thing Self includes Msg {
    message intern();
    
    internal port intP {
        sends intern
        receives intern
    }
    
    internal port intP2 {
        sends intern
        receives intern
    }
    
    required port p {
        sends m
        receives m
    }

	statechart TestInternalPort init I {
	
		state I {

            internal event m : p?m
            action intP!intern()
			
			internal event n : intP?intern
			action do 
				intP2!intern()
			end
			
			internal event n : intP2?intern
			action do 
				p!m()
			end
		}
	}
}

configuration conf {
	instance test : TestInternalPort2
	instance s1 : Self
	instance s2 : Self
	connector s1.p => test.p
	connector s2.p => test.p
}