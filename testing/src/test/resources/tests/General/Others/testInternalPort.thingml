import "../../thingml.thingml"

thing TestInternalPort includes Test 
@test "t # EX"
{
    message intern();
    
    internal port intP {
        sends intern
        receives intern
    }
    
    function f() do
        intP!intern()
    end
    
	statechart TestInternalPort init I {
	
		state I {
			on entry TestOut('E')

            internal event m : Test?In
			guard m.c == 't' 
            action f()
			
			internal event n : intP?intern
			action do
				TestOut('X')
				TestDone()
			end
		}
	}
}
