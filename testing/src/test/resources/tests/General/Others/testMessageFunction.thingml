import "../../thingml.thingml"


thing TestMessageFunction includes Test 
@test "hellohello # worldworld"
@test "hallo # w"
{

  function output(c : Char) : Char do
    return c
  end

	statechart TestHello init H {
		internal event Test?Done
		action TestDone()
	
		state H {	
			transition -> E 
			event m : Test?In
			guard m.c == 'h'
			action TestOut(output('w'))
			
			internal event m : Test?In
			guard not (m.c == 'h')
			action TestFailure('A')
		}
		
		state E {
			transition -> L1 
			event m : Test?In
			guard m.c == 'e'
			action TestOut(output('o'))
		}
		
		state L1 {
			transition -> L2 
			event m : Test?In
			guard m.c == 'l'
			action TestOut(output('r'))
		}
		
		state L2 {
			transition -> O 
			event m : Test?In
			guard m.c == 'l'
			action TestOut(output('l'))
		}
		
		state O {
			transition -> H 
			event m : Test?In
			guard m.c == 'o'
			action TestOut(output('d'))
		}
	}
}
