import "../devices/led.thingml"
import "../devices/softtimer.thingml"

thing Blink4Leds includes LEDMsgs, TimerMsgs
{

	required port timer
	{
		sends timer_start
        receives timer_timeout
	}
	
	required port leds
	{
		sends led_toggle
	}

    statechart Blink4LedsImpl init Blinking {
        
        state Blinking {
            
            on entry do 
            	timer!timer_start(500)
            end
            
            internal Blink1 event timer?timer_timeout
            action do
            	leds!led_toggle()
            	timer!timer_start(500)
            end
        }
    }
}

configuration Blink4Leds {       

	// The arduino board with 2 LEDs on pin 10 and 13
	instance arduino : Arduino
	
	instance led1 : LED set pin = DigitalPin:PIN_10 
	connector led1.DigitalIO => arduino.DigitalIO
	
	instance led2 : LED set pin = DigitalPin:PIN_13 
	connector led2.DigitalIO => arduino.DigitalIO
	
	instance led3 : LED set pin = DigitalPin:PIN_6 
	connector led3.DigitalIO => arduino.DigitalIO
	
	instance led4 : LED set pin = DigitalPin:PIN_8 
	connector led4.DigitalIO => arduino.DigitalIO
	
	instance timer : SoftTimer
	
	// The blink application
	instance app : Blink4Leds
	connector app.leds => led1.LED
	connector app.leds => led2.LED
	connector app.leds => led3.LED
	connector app.leds => led4.LED

	connector app.timer => timer.timer
}